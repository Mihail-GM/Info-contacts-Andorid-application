<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pop_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mihail.infocontacts.PopContact">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imagePopUP"

        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagePopUP"
        android:layout_alignParentStart="true"
        android:id="@+id/textNamePopUp" />

    <TextView
        android:text="TextView"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPhonePopUP"
        android:layout_marginEnd="65dp"
        android:layout_below="@+id/imagePopUP"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
